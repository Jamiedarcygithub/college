<resources>
    <!-- Base application theme. -->
    <style name="ParentMaterailTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Parent theme for all pre-lolipop and lolipop above versions i.e for all devices -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Base application theme. -->
    <style name="MaterailTheme" parent="ParentMaterailTheme">
        <!-- Sub class of ParentMaterailTheme -->

    </style>
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item><!-- Text color of toolbar title-->
        <item name="android:textColorSecondary">@android:color/white</item><!-- Color of overflow menu (3 dots icon)
                                                                                and color of navagation drawer icon-->
    </style>
    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:textColorPrimary">@color/grey_500</item>    <!-- Text color of Overflow Menu items-->
        <item name="android:background">@color/overflowMenuBg</item>        <!-- Background of Overflow Menu -->
    </style>
</resources>
